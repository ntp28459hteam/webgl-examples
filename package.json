    "devDependencies": {
        "@types/gl-matrix": "~2.4.0",
        "cross-env": "~5.1.4",
        "gl-matrix": "~2.6.1",
        "glob": "~7.1.2",
        "http-server": "~0.11.1",
        "npm-run-all": "~4.1.3",
        "pug": "~2.0.3",
        "rimraf": "~2.6.2",
        "rxjs": "~6.2.1",
        "source-map-support": "~0.5.6",
        "ts-loader": "~4.3.0",
        "tslint": "~5.10.0",
        "typescript": "~2.8.1",
        "webgl-operate": "~0.3.5",
